<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/app_lock_main_logo_imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/unlock"
        android:padding="100dp"
        app:srcCompat="@mipmap/ic_launcher_new_round" />

    <ImageButton
        android:id="@+id/app_lock_main_fingerprint_imageButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_above="@id/app_lock_main_unlock_button"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/unlock"
        android:scaleType="fitCenter"
        app:srcCompat="?android:attr/fingerprintAuthDrawable" />

    <Button
        android:id="@+id/app_lock_main_unlock_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/unlock" />
</RelativeLayout>