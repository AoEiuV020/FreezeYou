<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Translucent.NoTitleBar" parent="android:Theme.DeviceDefault.NoActionBar">
        <item name="android:windowBackground">@color/translucentBackground</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="AppTheme.Default.Light" parent="android:Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:actionOverflowButtonStyle">@style/OverflowStyle</item>
    </style>
    <style name="AppTheme.Default.Light.LightActionBar" parent="android:Theme.DeviceDefault.Light">
        <item name="android:actionOverflowButtonStyle">@style/OverflowStyle</item>
    </style>
    <style name="AppTheme.Default.Blue" parent="AppTheme.Default.Light">
        <item name="android:colorPrimary">#0383E9</item>
        <item name="android:colorPrimaryDark">#026FDE</item>
        <item name="android:colorAccent">#0300EF</item>
        <item name="android:navigationBarColor">#026FDE</item>
    </style>
    <style name="AppTheme.Default.Pink" parent="AppTheme.Default.Light">
        <item name="android:colorPrimary">#FF4081</item>
        <item name="android:colorPrimaryDark">#ec407a</item>
        <item name="android:colorAccent">#FF4081</item>
        <item name="android:navigationBarColor">#FF1744</item>
    </style>
    <style name="AppTheme.Default.Green" parent="AppTheme.Default.Light">
        <item name="android:colorPrimary">#00c853</item>
        <item name="android:colorPrimaryDark">#009624</item>
        <item name="android:colorAccent">#00aa00</item>
        <item name="android:navigationBarColor">#009624</item>
    </style>
    <style name="AppTheme.Default.Yellow" parent="AppTheme.Default.Light">
        <item name="android:colorPrimary">#ffbf00</item>
        <item name="android:colorPrimaryDark">#f7a500</item>
        <item name="android:colorAccent">#ffbf00</item>
        <item name="android:navigationBarColor">#f7a500</item>
    </style>
    <style name="AppTheme.Default.Orange" parent="AppTheme.Default.Light">
        <item name="android:colorPrimary">#ff6f00</item>
        <item name="android:colorPrimaryDark">#c43e00</item>
        <item name="android:colorAccent">#ff5500</item>
        <item name="android:navigationBarColor">#c43e00</item>
    </style>
    <style name="AppTheme.Default.White" parent="AppTheme.Default.Light.LightActionBar">
        <item name="android:colorPrimary">#fafafa</item>
        <item name="android:colorPrimaryDark">#eeeeee</item>
        <item name="android:colorAccent">#424242</item>
        <item name="android:navigationBarColor">#eeeeee</item>
    </style>
    <style name="OverflowStyle" parent="android:Widget.Material.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_more</item>
    </style>
</resources>
