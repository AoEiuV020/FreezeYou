<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Translucent.NoTitleBar" parent="android:Theme.DeviceDefault.NoActionBar">
        <item name="android:windowBackground">@color/translucentBackground</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="AppTheme.Default.Blue" parent="android:Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:colorPrimary">#0383E9</item>
        <item name="android:colorPrimaryDark">#026FDE</item>
        <item name="android:colorAccent">#0800EF</item>
        <item name="android:navigationBarColor">#026FDE</item>
    </style>
    <style name="AppTheme.Default.Pink" parent="android:Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:colorPrimary">#f50057</item>
        <item name="android:colorPrimaryDark">#f00037</item>
        <item name="android:colorAccent">#f50057</item>
        <item name="android:navigationBarColor">#f00037</item>
    </style>
    <style name="AppTheme.Default.Green" parent="android:Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:colorPrimary">#00c853</item>
        <item name="android:colorPrimaryDark">#009624</item>
        <item name="android:colorAccent">#00aa00</item>
        <item name="android:navigationBarColor">#009624</item>
    </style>
    <style name="AppTheme.Default.Yellow" parent="android:Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:colorPrimary">#ffd600</item>
        <item name="android:colorPrimaryDark">#f7a500</item>
        <item name="android:colorAccent">#ffd600</item>
        <item name="android:navigationBarColor">#f7a500</item>
    </style>
    <style name="AppTheme.Default.Orange" parent="android:Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:colorPrimary">#ff6f00</item>
        <item name="android:colorPrimaryDark">#c43e00</item>
        <item name="android:colorAccent">#ff5500</item>
        <item name="android:navigationBarColor">#c43e00</item>
    </style>
</resources>