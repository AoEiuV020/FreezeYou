<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Translucent.NoTitleBar" parent="android:Theme.DeviceDefault.NoActionBar">
        <item name="android:windowBackground">@color/realTranslucent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Default" parent="android:Theme.DeviceDefault">
        <item name="android:actionOverflowButtonStyle">@style/OverflowStyle</item>
    </style>

    <style name="AppTheme.Default.Light" parent="android:Theme.DeviceDefault.Light">
        <item name="android:actionOverflowButtonStyle">@style/OverflowStyle</item>
    </style>

    <style name="AppTheme.Default.Light.White" parent="android:Theme.DeviceDefault.Light">
        <item name="android:actionOverflowButtonStyle">@style/OverflowStyle.LightBackground</item>
    </style>

    <style name="AppTheme.Default.Blue" parent="AppTheme.Default.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyle.Blue</item>
    </style>

    <style name="AppTheme.Default.Yellow" parent="AppTheme.Default.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyle.Yellow</item>
    </style>

    <style name="AppTheme.Default.Orange" parent="AppTheme.Default.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyle.Orange</item>
    </style>

    <style name="AppTheme.Default.Green" parent="AppTheme.Default.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyle.Green</item>
    </style>

    <style name="AppTheme.Default.Pink" parent="AppTheme.Default.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyle.Pink</item>
    </style>

    <style name="AppTheme.Default.Red" parent="AppTheme.Default.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyle.Red</item>
    </style>

    <style name="AppTheme.Default.White" parent="AppTheme.Default.Light.White">
        <item name="android:actionBarStyle">@style/ActionBarStyle.White</item>
    </style>

    <style name="ActionBarStyle.Light.NoLogo" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:displayOptions">showTitle</item>
    </style>

    <style name="ActionBarStyle.Blue" parent="ActionBarStyle.Light.NoLogo">
        <item name="android:background">#0383e9</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <style name="ActionBarStyle.Yellow" parent="ActionBarStyle.Light.NoLogo">
        <item name="android:background">#FDD835</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <style name="ActionBarStyle.Orange" parent="ActionBarStyle.Light.NoLogo">
        <item name="android:background">#ff6f00</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <style name="ActionBarStyle.Green" parent="ActionBarStyle.Light.NoLogo">
        <item name="android:background">#00c853</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <style name="ActionBarStyle.Pink" parent="ActionBarStyle.Light.NoLogo">
        <item name="android:background">#f50057</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <style name="ActionBarStyle.Red" parent="ActionBarStyle.Light.NoLogo">
        <item name="android:background">#d50000</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <style name="ActionBarStyle.White" parent="ActionBarStyle.Light.NoLogo">
        <item name="android:background">#fafafa</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle.LightBackground</item>
    </style>

    <style name="ActionBarTitleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fafafa</item>
    </style>

    <style name="ActionBarTitleStyle.LightBackground">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#212121</item>
    </style>

    <style name="OverflowStyle" parent="android:Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_more</item>
    </style>

    <style name="OverflowStyle.LightBackground" parent="android:Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_more_light</item>
    </style>
</resources>
