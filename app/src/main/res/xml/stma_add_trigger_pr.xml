<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="stma_add_label"
        android:title="@string/label"
        android:defaultValue="@string/label"/>

    <SwitchPreference
        android:title="@string/enable"
        android:key="stma_add_enable"
        android:defaultValue="true"/>

    <MultiSelectListPreference
        android:entries="@array/triggers"
        android:entryValues="@array/triggersValues"
        android:title="@string/triggers"
        android:key="stma_add_trigger"/>

    <EditTextPreference
        android:key="stma_add_task"
        android:title="@string/task"
        android:defaultValue="okuf"/>

    <Preference
        android:title="@string/help"
        android:key="stma_add_help"/>

</PreferenceScreen>
